            },
            "Artifacts": [
                {
                  "URI": "docker:677146750822.dkr.ecr.ap-northeast-2.amazonaws.com/cdk-hnb659fds-container-assets-677146750822-ap-northeast-2:1fc72579222e8f6909a51b27a9c495d41447eaa72ff57b37f42f4900d24ad0d1"
                }
